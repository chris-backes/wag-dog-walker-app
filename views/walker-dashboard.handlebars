<div class="columns mt-3">
    <div class="column is-three-fifths is-offset-one-fifth">
        <div class="card">
            <div class="card-image">
                <figure class="image is-3by2">
                    <img src="{{walkerInfo.profile_pic}}" alt="walker profile image">
                </figure>
            </div>
  
            <div class="card-content">
    
                <div class="walker">
     
                    <div class="walker-content">
                        <p class="title is-3 mb-0">{{walkerInfo.walker_name}}</p>
                        <a class="my-0" href="mailto:{{walkerInfo.email}}">{{walkerInfo.email}}</a>
                    </div>
                </div>

                <div class="walker-content mt-3">
                    <p>Hourly Rate: <span class="walker-info">${{walkerInfo.hourly_rate}}</span></p>
                    <p>Phone #: <span class="walker-info">{{walkerInfo.phone}}</span></p>
                </div>
        
                <div class="content mt-3">
                    <p>Appointments:</p>
                    {{#each walkerInfo.calendar}}
                    {{#if this.dog_id}}
                    <table class="table">
                      <tbody>
                        <tr>
                          <th>Day</th>
                          <td>{{this.day}}</td>
                        </tr>
                        <tr>
                          <th>Time</th>
                          <td>{{this.time}}</td>
                        </tr>
                        <tr>
                          <th>Dog Name</th>
                          <td>{{this.dog.dog_name}}</td>
                        </tr>
                      </tbody>
                    </table>
                    {{/if}}
                    {{/each}}
                </div>
                 <div class="content mt-2">
                    <p>Times Available</p>
                    {{#each walkerInfo.calendar}}
                    {{#unless this.dog_id}}
                    <div data-calendar="{{this.id}}">
                    {{this.day}}
                    {{this.time}}
                    <button type="click" class="delete-btn">Delete</button>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
  
            <footer class="card-footer">
                <a href="/owner/{{owner.id}}/add-dog" class="card-footer-item">Add Dog</a>
            </footer>
        </div>
    </div>
</div>
<section>
  <div>
      <form class="weekly-form">
      <div>
        Please provide which dates you are available to walk:
        <select class="day">
          <option>Monday</option>
          <option>Tuesday</option>
          <option>Wednesday</option>
          <option>Thursday</option>
          <option>Friday</option>
          <option>Saturday</option>
          <option>Sunday</option>
        </select>
        <select class="time">
          <option>6:00</option>
          <option>7:00</option>
          <option>8:00</option>
          <option>9:00</option>
          <option>10:00</option>
          <option>11:00</option>
          <option>12:00</option>
          <option>13:00</option>
          <option>14:00</option>
          <option>15:00</option>
          <option>16:00</option>
          <option>17:00</option>
          <option>18:00</option>
          <option>19:00</option>
          <option>20:00</option>
        </select>
        <button type="submit">Add Time</button>
      <script src="/public/js/walker-dashboard.js"></script>
      </form>
  </div>
</section>
