<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css'
      integrity='sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Bebas+Neue&family=Shadows+Into+Light&family=Smooch+Sans:wght@100;300&display=swap'
      rel='stylesheet'
    />
    <link rel='stylesheet' href='/public/css/stylesheet.css' />
    <title>Wag!</title>
  </head>
  <body class='has-navbar-fixed-top'>
    <nav
      class='navbar is-link is-fixed-top'
      role='navigation'
      aria-label='main navigation'
    >
      <div class='navbar-brand'>
        <a class='navbar-item is-size-4' href='/'>W | A | G </a>
      </div>

      <div class='navbar-menu is-active has-background-link'>
        <div class='navbar-end'>
          <a href='/about-us' class='navbar-item has-text-white'> About Us </a>
          {{#unless walkerLogin}}
            <a href='/walker/sign-up' class='navbar-item has-text-white'> Become a Walker </a>
          {{/unless}}
          <a href='/contact-us' class='navbar-item has-text-white'> Contact Us </a>

          <div class='navbar-item'>
            <div class='buttons'>
              {{#if loggedIn}}
                <button id='logout' class='button special is-light'>
                  Log out
                </button>
              {{else}}
                <a href='/owner/sign-up' class='button is-primary'><strong>Sign
                    up</strong></a>
                <a href='/login' class='button is-light'> Log in </a>
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    </nav>

    {{{body}}}

    {{#if loggedIn}}
      <script src='/public/js/logout.js'></script>
    {{/if}}
  </body>
  <footer class='footer'>
    <div class='content has-text-centered'>
      <p>&copy; 2022 TeamWag Inc. All rights reserved.</p>
    </div>
  </footer>
</html>